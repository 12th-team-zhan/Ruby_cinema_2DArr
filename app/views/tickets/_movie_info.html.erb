<div class="movie-info container-md d-flex px-lg-4p pt-4">
  <div class="col-3 poster me-3 d-none d-sm-block">
    <%= image_tag movie.movie_poster, class: "m-auto w-100" %>
  </div>
  <div class="col-9 text flex-grow-1 gap-2">
    <ul class="list-group pb-3">
      <li class="list-group-item ps-0 pt-0 fs-3 title"><%= movie.name %></li>
      <li class="list-group-item ps-0 fw-semibold">
        級別：<%= Movie.human_attribute_name("film_rating.#{movie.film_rating}") %>
      </li>
      <li class="list-group-item ps-0 fw-semibold">
        地點：<%= theater.name %> - <%= cinema.name %>
      </li>
      <li class="list-group-item ps-0 fw-semibold">
        開演時間：<%= started_time %>
      </li>
    </ul>
    <% if ticket_list.present? %>
      <ul class="list-group">
        <li class="list-group-item ps-0 py-4 fw-semibold" data-controller="select-ticket-type">票種：
          <span class="d-flex gap-2">
            <% ticket_list.each do |type| %>
              <div><%= type %></div>
            <% end %>
          </span>
        </li>
      </ul>
    <% end %>
    <ul class="list-group">
      <li class="list-group-item ps-0 py-4 fw-semibold">
        總價: <span class="fs-3 fw-semibold" data-controller="select-amount--update-total-price" data-action="totalAdd@window->select-amount--update-total-price#update" data-select-amount--update-total-price-target="price"><%= total_price %></span>
      </li>
    </ul>
  </div>
</div>