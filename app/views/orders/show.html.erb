<div class="container px-lg-4p">
  <div class="order-show py-2">
    <h2>電影名稱 : <%= @order.movie_name %></h2>
    <div>
      <h3>訂單金額 : <%= @order.amount %></h3>
    </div>
    <section class="mb-4">
      <% @tickets.each do |ticket|%>
        <div class="shadow mb-3">
          <div class="ticket-text d-flex py-2 flex-column align-items-center">
            <div>座位 : <%= show_ticket_seat(ticket) %></div>
            <div><%= Ticket.human_attribute_name("use_status.#{ticket.use_status}") %></div>
          </div>
          <div class="d-flex justify-content-center" data-controller="orders--show--qr-code">
            <canvas data-orders--show--qr-code-target="canvas" data-serial=<%= ticket.serial %>></canvas>
          </div>
        </div>
      <% end %>
    </section>
    <section class="text-center">
      <span class="my-2 py-1 px-4">
        <%= link_to "回訂單列表", orders_path, class: "btn btn-cerulean-confirm btn-lg" %>
      </span>
    </section>
  </div>
</div>
